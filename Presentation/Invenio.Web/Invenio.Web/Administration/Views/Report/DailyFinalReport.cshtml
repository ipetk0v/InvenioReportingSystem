@model Invenio.Admin.Models.Report.DailyReportModelList
@{
    /**/

    var defaultGridPageSize = EngineContext.Current.Resolve<Invenio.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Invenio.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.ContentManagement.Report").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Report");

    int? filterByReportId = ViewBag.FilterByReportPostId;
}

@Html.AntiForgeryToken()

<div class="content-header clearfix">
    <h1 class="pull-left">
        @T("Admin.Report.Title")
    </h1>
    <div class="pull-right">
        <button type="button" class="btn btn-success">
            <i class="fa fa-download"></i>
            @T("Admin.Common.Export.Excel")
        </button>
        <button type="button" class="btn btn-success">
            <i class="fa fa-download"></i>
            @T("Admin.Common.Export.PDF")
        </button>
    </div>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="final-reports-grid"></div>
                    <script>
            $(document).ready(function() {
                $("#final-reports-grid").kendoGrid({
                    dataSource: {
                        type: "json",
                        transport: {
                            read: {
                                url: "@Html.Raw(Url.Action("DailyFinalReport", "Report"))",
                                type: "POST",
                                dataType: "json",
                                data: additionalData
                            }
                        },
                        schema: {
                            data: "Data",
                            total: "Total",
                            errors: "Errors"
                        },
                        error: function(e) {
                            display_kendoui_grid_error(e);
                            // Cancel the changes
                            this.cancelChanges();
                        },
                        //aggregate: [{ field: "Quantity", aggregate: "sum" },
                        //    { field: "BlockedParts", aggregate: "sum" },
                        //    { field: "ReworkedParts", aggregate: "sum" },
                        //    { field: "NokParts", aggregate: "sum" }
                        //],
                        pageSize: @(defaultGridPageSize),
                        serverPaging: true,
                        serverFiltering: true,
                        serverSorting: true
                    },
                    pageable: {
                        refresh: true,
                        pageSizes: [@(gridPageSizes)],
                        @Html.Partial("_GridPagerMessages")
                    },
                    editable: {
                        confirmation: "@T("Admin.Common.DeleteConfirmation")",
                        mode: "inline"
                    },
                    scrollable: false,
                    columns:
                    [
                        {
                            field: "DateOfInspection",
                            title: "@T("Admin.Report.DailyFinalReport.DateOfInspection")",
                            type: "date",
                            format: "{0:dd MMM yyyy}"
                        },
                        {
                            field: "PartNumber",
                            title: "@T("Admin.Report.DailyFinalReport.PartNumber")"
                        },{
                            field: "DeliveryNumber",
                            title: "@T("Admin.Report.DailyFinalReport.DeliveryNumber")"
                        },
                        {
                            field: "ChargeNumber",
                            title: "@T("Admin.Report.DailyFinalReport.ChargeNumber")"
                        },
                        {
                            field: "Quantity",
                            title: "@T("Admin.Report.DailyFinalReport.Quantity")"
                        },{
                            field: "FirstRunOkParts",
                            title: "@T("Admin.Report.DailyFinalReport.FirstRunOkParts")"
                        },{
                            field: "BlockedParts",
                            title: "@T("Admin.Report.DailyFinalReport.BlockedParts")"
                        },{
                            field: "NokParts",
                            title: "@T("Admin.Report.DailyFinalReport.NokParts")"
                        },
                        {
                            field: "Dod1",
                            title: "@T("1")"
                        },
                        {
                            field: "Dod2",
                            title: "@T("2")"
                        },
                        {
                            field: "Dod3",
                            title: "@T("3")"
                        },
                        {
                            field: "Dod4",
                            title: "@T("4")"
                        },
                        {
                            field: "Dod5",
                            title: "@T("5")"
                        },
                        {
                            field: "Dod6",
                            title: "@T("6")"
                        },
                        {
                            field: "Dod7",
                            title: "@T("7")"
                        },
                        {
                            field: "Dod8",
                            title: "@T("8")"
                        },
                        {
                            field: "NokPercentage",
                            title: "@T("Admin.Report.DailyFinalReport.NokPercentage")"
                        },{
                            field: "ReworkedParts",
                            title: "@T("Admin.Report.DailyFinalReport.ReworkedParts")"
                        },{
                            field: "Dor1",
                            title: "@T("1")"
                        }, {
                            field: "Dor2",
                            title: "@T("2")"
                        },{
                            field: "Dor3",
                            title: "@T("3")"
                        },{
                            field: "Dor4",
                            title: "@T("4")"
                        },{
                            field: "ReworkedPercentage",
                            title: "@T("Admin.Report.DailyFinalReport.ReworkedPercentage")"
                        }]
                });
            });
                    </script>
                    <script type="text/javascript">
                        var selectedIds = [];

                        $(document).ready(function() {
                            //search button
                            $('#search-reports')
                                .click(function() {
                                    //search
                                    var grid = $('#final-reports-grid').data('kendoGrid');
                                    grid.dataSource.page(1); //new search. Set page size to 1
                                    //grid.dataSource.read(); we already loaded the grid above using "page" function
                                    //clear selected checkboxes
                                    $('.checkboxGroups').attr('checked', false).change();
                                    selectedIds = [];
                                    return false;
                                });
                        });

                        function additionalData() {
                            var data = {
                                OrderId: '@Model.OrderId'
                                @*CreatedOnFrom: $('#@Html.FieldIdFor(model => model.CreatedOnFrom)').val(),
                                CreatedOnTo: $('#@Html.FieldIdFor(model => model.CreatedOnTo)').val(),
                                SearchApprovedId: $('#SearchApprovedId').val()*@
                            };
                            addAntiForgeryToken(data);
                            return data;
                        }

                    </script>

