                                    },
                                    {
                                        field: "TotalBlocked",
                                        title: "@T("Admin.Report.DailyFinalReport.TotalBlocked")"
                                    },
                                    {
                                        field: "TotalReworked",
                                        title: "@T("Admin.Report.DailyFinalReport.TotalReworked")"
                                    },
                                    {
