                                    },
                                    {
                                        field: "NokPercentage",
                                        title: "@T("Admin.Report.DailyFinalReport.NokPercentage")"
                                    }]
                            });
                        });

                        function additionalData() {
                            var data = {
                                OrderId: '@Model.OrderId'
                            };
                            addAntiForgeryToken(data);
                            return data;
                        }
                            </script>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6" style="margin-top:10px;">
                            <div id="reworked-reports-grid"></div>
                            <script>
                        var record = 0;
